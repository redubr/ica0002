$TTL	604800
{{domain_name}}.	IN	SOA	server2.{{domain_name}}. redubr.{{domain_name}}. (
			      3		; Serial
			 604800		; Refresh
			  86400		; Retry
			2419200		; Expire
			 604800 )	; Negative Cache TTL
;
{% for vm in groups['dns_servers'] %}
@	IN	NS	{{vm}}.{{domain_name}}.
{% endfor %}

{% for vm in hostvars %}
{{hostvars[vm]['inventory_hostname']}}    IN  A   {{hostvars[vm]['ansible_default_ipv4']['address']}}
{% endfor %}
backup    IN A {{backup_server_ip}}