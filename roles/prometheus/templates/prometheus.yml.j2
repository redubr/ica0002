global:
  scrape_interval: 15s
  scrape_timeout: 10s
  evaluation_interval: 15s
  external_labels:
    monitor: example

alerting:
  alertmanagers:
  - static_configs:
    - targets:
      - localhost:9093
    scheme: http
    timeout: 10s
    api_version: v1

scrape_configs:

- job_name: linux
  static_configs:
    - targets:
        - server1.{{domain_name}}:9100
        - server2.{{domain_name}}:9100
        - server3.{{domain_name}}:9100

- job_name: prometheus
  honor_timestamps: true
  scrape_interval: 5s
  scrape_timeout: 5s
  metrics_path: /prometheus/metrics
  scheme: http
  static_configs:
  - targets:
    - localhost:9090